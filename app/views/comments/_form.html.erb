<%= simple_form_for [commentable, Comment.new],remote:true, html: { class: local_assigns[:class] }, data: { target: local_assigns[:target]}  do |f| %>
  <%= f.error_notification %>
  <%= f.input :body, placeholder: "Add a Comment!", label: false %>
  <%= f.input :parent_id, as: :hidden, input_html: { value: local_assigns[:parent_id]} %>
  <%= f.button :submit,"Comment", class: "btn-outline-primary" %>
<% end %>
