<div class="card mt-3">
  <div class="card-body">
    <span class="name"><b><%= link_to  comment.user.name, user_path(comment.user) %></b></span>
    <span class="created-at float-right"><small><%= time_ago_in_words(comment.created_at) %> ago</small></span>
    <p><%= comment.body %></p>
    <div data-controller = 'reply'>
      <%= link_to  "Reply", '#', data: { action: 'click->reply#show'} %>
      <div class="col-md-12">
        <%= render partial: "comments/form", locals: { commentable: comment.commentable, parent_id: comment.id, class: "d-none", target: 'reply.form' } %>
      </div>
    </div>
    <%= render comment.comments %>
  </div>
</div>
