  <div class="col-sm-8 offset-sm-2">
    <h5 class="mt-3"><%= @user.name %></h5>
    <div class="user-info mt-4 mb-4">
      <%= render partial: 'user_info', object: @user %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-8 offset-sm-2">
    <div id="posts-user">
      <%# render partial: 'posts/post' %>
      <%= render @posts %>
    </div>
    <div class="mt-4">
      <%= pagy_bootstrap_nav(@pagy).html_safe %>
    </div>
  </div>
</div>
