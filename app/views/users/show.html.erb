<div class="row">
  <div id="notifications"></div>
</div>
<div class="row">
  <div class="col-sm-8 offset-sm-2">
    <h5 class="mt-3"><%= @user.name %></h5>
    <div class="user-info mt-4 mb-4">
      <%= render partial: 'user_info', object: @user %>
    </div>
  </div>
</div>
<%# if @posts.any? %>
<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <div id="posts">
      <%= render @posts %>
    </div>
  </div>
  <div class="col-sm-2"></div>
</div>
<div class="row">
  <div class="col-sm-8 offset-sm-2">
    <%= will_paginate(@posts, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'justify-content-center', class: "mt-5") %>
  </div>
</div>
<%# end %>
