<div class="row">
  <div id="notifications"></div>
</div>
<div class="row mt-5 mb-5">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="user-info">
      <div class="row">
        <% @user ||= current_user %>
        <%# render partial: 'user_info', object: @user %>
        <%= render partial: 'shared/stats', object: @user %>
      </div>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-sm-6 mb-5">
    <div id="posts-user" class="posts">
      <%= render @posts %>
    </div>
    <%# if @posts.count > 10 %>
    <div class="mt-4">
      <%= pagy_bootstrap_nav(@pagy).html_safe %>
    </div>
    <%# end%>
  </div>
  <div class="col-md-3"></div>
</div>
