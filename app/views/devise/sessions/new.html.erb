<div class="row align-items-center justify-content-center" style="height:100vh;">
  <div class="col-sm-6 col-md-4 devise-form text-center">
    <div class="sign-in-content">
      <p class="main-content">Welcome Back</p>
      <p class="helper-content mt-4">Sign in to your account to continue</p>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs text-left">
        <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                placeholder: 'Email',
                label: false %>
        <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: 'mt-3' },
                placeholder: 'Password',
                label: false
                 %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Sign In", class: "btn btn-block btn-primary signin-button" %>
      </div>
    <% end %>
    <div class="mt-3 mb-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
