<div class="row signup-page align-items-center justify-content-center" style="height:100vh;">
  <div class="col-sm-6 col-md-5 devise-form text-center my-auto">
    <div class="sign-in-content">
      <p class="main-content">Create your free account</p>
      <p class="helper-content mt-4">Made by Gators for the Gators</p>
    </div>
    <div class="signup-form-content text-left">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :avatar, as: :file, label: false%>
          <%= f.input :name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" },
                placeholder: 'Your name',
                label:false %>
          <%= f.input :username,
                hint: "Enter your unique username",
                required: true,
                autofocus: true,
                placeholder: 'Username',
                input_html: { autocomplete: "username" },
                label:false %>
          <%= f.input :email,
                required: true,
                autofocus: true,
                placeholder: 'Email',
                input_html: { autocomplete: "email" },
                label:false %>
          <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                placeholder: 'Password',
                label: false %>
          <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" },
                placeholder: 'Password Confirmation',
                label:false %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-block btn-primary signin-button" %>
        </div>
      <% end %>
      <div class="mt-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
