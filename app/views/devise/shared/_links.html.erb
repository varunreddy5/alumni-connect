      <% end %>
    <% end %>
    <%# link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'btn btn-block btn-primary signin-button' %>
  <% end %>
<% end %>
