<div id="post_share-<%= post.id %>">
  <% if already_shared?(post, current_user) %>
    <%= link_to post_path(Post.where(original_tweet_id: post.id, user_id: current_user).first), method: :delete, remote: true, data: {confirm: "Are you sure to unshare this post?"} do %>
      <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" class="share-icon shared-icon"><path d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path></svg>
    <% end %>
  <% else %>
    <%= render partial: 'posts/post_share_modal', locals: { post: post }%>
  <% end %>
</div>
