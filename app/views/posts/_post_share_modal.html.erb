<span>
  <svg data-toggle="modal" data-target="#tweetShareModal-<%=post.id %>" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" class="share-icon"><path d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path></svg>
</span>
<div class="modal fade" id="tweetShareModal-<%= post.id %>" tabindex="-1" role="dialog" aria-labelledby="tweetModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for :post, url: share_post_path(post), remote: true do |f| %>
          <%= f.error_notification %>
          <%= f.rich_text_area :content, placeholder: "Share with a comment!" %>
          <%= f.button :submit, "Share", class: "create-button btn-primary mt-4",
          'data-toggle' => 'modal', 'data-target' => "#tweetShareModal-#{post.id}" %>
        <% end %>
        <div class="modal-post">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <%= render partial: 'posts/post_user_content', locals: { post: post } %>
              </div>
              <div class="row">
                <%= render partial: 'posts/post_body', locals: { post: post }%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
