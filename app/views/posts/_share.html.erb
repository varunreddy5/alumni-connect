<div class="row">
  <div class="shared-user-info col-md-12">
    <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" class="share-icon"><path d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path></svg>
    <span class="shared-name ml-2"><%= post.user != current_user ? post.user.name : 'You' %> Shared </span>
    <span style="float:right">
      <%= render partial: 'posts/delete', locals: { post: post } %>
    </span>
  </div>
</div>
<% if post.rich_text_content.blank? == false %>
  <div class="row">
    <%= render partial: 'posts/post_user_content', locals: { post: post } %>
  </div>
  <div class="row">
    <%= render partial: 'posts/post_body', locals: { post: post }%>
  </div>
<% end %>
